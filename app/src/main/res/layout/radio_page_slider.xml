<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/georealreal"
    android:orientation="vertical">



        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/home_slider"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:sliderAnimationDuration="600"
            android:background="@color/mainAccent"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderAutoCycleEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center|bottom"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="1dp"
            app:sliderIndicatorRadius="1.5dp"
            app:sliderIndicatorSelectedColor="#FFFFFF"
            app:sliderIndicatorUnselectedColor="#66FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:sliderScrollTimeInSec="1"
            android:scaleType="centerCrop"
            app:sliderStartAutoCycle="true" />





    <TextView
        android:id="@+id/MusicLable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kufam_bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/home_slider"
        android:text="WCDT Radio"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:textSize="20sp" />

    <View
        android:id="@+id/headingview"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/MusicLable"
        android:layout_marginHorizontal="150dp"
        app:layout_constraintStart_toStartOf="@id/MusicLable"
        app:layout_constraintEnd_toEndOf="@+id/MusicLable"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/home_greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kufam_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/headingview"
        android:text=""
        android:textColor="#72FFFFFF"
        android:layout_gravity="center"
        android:textSize="14sp" />



</androidx.constraintlayout.widget.ConstraintLayout>