<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/updateColorbg"
    >


    <TextView
        android:id="@+id/updateapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_label"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/kufam_bold"
        android:includeFontPadding="false"
        android:gravity="center"
        android:text="Update your App."
        android:textColor="@color/black"
        android:textSize="22sp" />

    <View
        android:id="@+id/line_separator"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_below="@+id/heading"
        android:layout_marginHorizontal="@dimen/edge_val"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#FF303030"
        android:text="Enjoy Better and Improved Experience on Mwonya. This app version requires an update from playstore" />


    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/updateColorbg"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:layout_marginVertical="20dp"
        app:riv_corner_radius="8dp"
        android:src="@drawable/default_radio" />


    <Button
        android:id="@+id/update_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="Update app"
        android:transitionName="account_button"
        android:background="@drawable/rounded_btn_bg"
        android:textColor="#FFFFFF"
        app:backgroundTint="#000000"
        android:fontFamily="@font/roboto_light"
        />








</LinearLayout>