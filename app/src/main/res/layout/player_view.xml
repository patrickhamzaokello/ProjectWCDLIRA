<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modernPlayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/modernPlayerbg"
    android:clickable="true"
    android:elevation="200dp"
    android:focusable="true"
    android:fitsSystemWindows="true"
    android:visibility="gone"
    tools:context=".RootActivity"
    tools:visibility="visible">

    <View
        android:id="@+id/viewSupporterForBackground"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@id/layoutPlayer"
        app:layout_constraintStart_toStartOf="@id/layoutPlayer"
        app:layout_constraintTop_toTopOf="@id/layoutPlayer"

        />

    <View
        android:id="@+id/viewSupporterForAlbumArt"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/layoutPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textNowPlaying"

        />

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/viewSupporterForAlbumArt"
        app:layout_constraintEnd_toStartOf="@id/viewSupporterForAlbumArt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/viewSupporterForBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view1"
        app:layout_constraintTop_toBottomOf="@id/view1" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/viewSupporterForAlbumArt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/viewSupporterForAlbumArt">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/cir_artworkView"
            android:scaleType="centerCrop"
            android:src="@drawable/default_radio"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="8dp" />

        <TextView
            android:id="@+id/playerLyrics"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/roboto_light"
            android:text="@string/request_lyrics"
            android:padding="20dp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/smallrounded"
            android:backgroundTint="#280B63"
            app:layout_constraintStart_toStartOf="@+id/cir_artworkView"
            app:layout_constraintEnd_toEndOf="@+id/cir_artworkView"
            app:layout_constraintBottom_toBottomOf="@+id/cir_artworkView"
            app:layout_constraintTop_toTopOf="@+id/cir_artworkView"
            android:textColor="#61FFFFFF"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/songNameView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:ellipsize="marquee"
            android:fontFamily="@font/roboto_light"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="Current Song Title"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/loveBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cir_artworkView" />

        <TextView
            android:id="@+id/songArtist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:ellipsize="marquee"
            android:fontFamily="@font/roboto_light"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="Artist Name"
            app:layout_constraintEnd_toStartOf="@+id/loveBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/songNameView" />

        <ImageButton
            android:id="@+id/trackshareBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/small_control_background"
            android:contentDescription="@string/app_name"
            android:padding="4dp"
            android:src="@drawable/ic_circum_share_1"
            app:layout_constraintTop_toTopOf="@id/songNameView"
            app:layout_constraintBottom_toBottomOf="@+id/songArtist"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loveBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clipToPadding="false"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="#00000000"
            app:layout_constraintEnd_toStartOf="@+id/trackshareBtn"
            app:layout_constraintTop_toTopOf="@id/trackshareBtn"
            app:layout_constraintBottom_toBottomOf="@id/trackshareBtn"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.widget.Button
                    android:id="@+id/loveTrackBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_lovedtrack"
                    android:clickable="false"
                    android:theme="@style/WhiteBtn" />


            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>







    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/textNowPlaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_light"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="WCDT ONLINE RADIO"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/playerCloseBtns"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/small_control_background"
        android:contentDescription="@string/app_name"
        android:padding="4dp"
        android:src="@drawable/ic_tabler_chevron_down"
        app:layout_constraintBottom_toBottomOf="@+id/textNowPlaying"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"

        app:layout_constraintTop_toTopOf="@+id/textNowPlaying"
        app:tint="@color/white" />

    <ImageButton
        android:id="@+id/topbtnShare"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/small_control_background"
        android:contentDescription="@string/app_name"
        android:padding="4dp"
        android:src="@drawable/ic_baseline_more_horiz_24"
        app:tint="@color/white"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textNowPlaying"
        app:layout_constraintTop_toTopOf="@+id/textNowPlaying" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/player_background"
        app:layout_constraintBottom_toBottomOf="parent">



        <ImageButton
            android:id="@+id/playPauseBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="55dp"
            android:background="@drawable/play_background_btn"
            android:contentDescription="@string/app_name"
            android:padding="12dp"
            android:src="@drawable/ic_baseline_play_circle_filled_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />

        <ProgressBar
            android:id="@+id/songLoaderProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="1dp"
            android:theme="@style/CircularProgress"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/playPauseBtn"
            app:layout_constraintEnd_toEndOf="@id/playPauseBtn"
            app:layout_constraintStart_toStartOf="@id/playPauseBtn"
            app:layout_constraintTop_toTopOf="@id/playPauseBtn" />

        <ImageButton
            android:id="@+id/skipPreviousBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/next_previous_btn_background"
            android:contentDescription="@string/app_name"
            android:padding="4dp"
            android:src="@drawable/ic_skip_previous"
            app:layout_constraintBottom_toBottomOf="@id/playPauseBtn"
            app:layout_constraintEnd_toStartOf="@id/playPauseBtn"
            app:layout_constraintTop_toTopOf="@id/playPauseBtn"

            />

        <ImageButton
            android:id="@+id/skipnextBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/next_previous_btn_background"
            android:contentDescription="@string/app_name"
            android:padding="4dp"
            android:src="@drawable/ic_skip_next"
            app:layout_constraintBottom_toBottomOf="@id/playPauseBtn"
            app:layout_constraintStart_toEndOf="@id/playPauseBtn"
            app:layout_constraintTop_toTopOf="@id/playPauseBtn"

            />


        <ImageButton
            android:id="@+id/shuffleModeBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:src="@drawable/shuffle_off"
            app:layout_constraintBottom_toBottomOf="@id/playPauseBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/playPauseBtn"

            />

        <ImageButton
            android:id="@+id/repeatModeBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="18dp"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:src="@drawable/repeat_all_off_24_regular"
            app:layout_constraintBottom_toBottomOf="@id/playPauseBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/playPauseBtn"

            />

        <TextView
            android:id="@+id/plViewLyricsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Up Next"
            android:background="@drawable/smallrounded"
            android:backgroundTint="@color/white"
            android:textSize="12sp"
            android:paddingHorizontal="5dp"
            android:fontFamily="@font/kufam_medium"
            android:paddingBottom="2dp"
            android:textColor="#0F1729"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="15dp"

            />



        <TextView
            android:id="@+id/upNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/roboto_light"
            android:text="Upnext"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/plViewLyricsTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="@id/plViewLyricsTitle"
            app:layout_constraintBottom_toBottomOf="@id/plViewLyricsTitle"
            android:textSize="12sp" />


        <SeekBar
            android:id="@+id/seekbar"
            style="@style/customSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="4dp"
            android:progress="10"
            android:progressBackgroundTint="@color/seek_bar_progress_bg_tint"
            android:secondaryProgressTint="#FFFFFF"
            android:secondaryProgress="20"
            android:progressTint="@color/seek_progress"
            android:splitTrack="false"
            android:thumb="@drawable/seek_thumb"
            android:thumbOffset="0dp"
            app:layout_constraintBottom_toTopOf="@id/playPauseBtn" />

        <TextView
            android:id="@+id/progressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="4dp"
            android:text="00:00"
            android:textColor="@color/progressnoColor"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_light"
            app:layout_constraintBottom_toTopOf="@id/seekbar"
            app:layout_constraintStart_toStartOf="@id/seekbar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/durationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp"
            android:text="01:37"
            android:textColor="@color/progressnoColor"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_light"
            app:layout_constraintBottom_toTopOf="@id/seekbar"
            app:layout_constraintEnd_toEndOf="@id/seekbar"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>