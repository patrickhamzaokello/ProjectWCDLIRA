<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeChurch"
    android:background="@color/purple_500"
    android:orientation="vertical"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_ellipse_577"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"

        >

        <TextView
            android:id="@+id/introtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Welcome to a new Experience at"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/secondintrotext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/introtext"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Worship Center Downtown"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/thirdIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondintrotext"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Lira"
            android:textColor="@color/white"
            android:textSize="20sp" />



    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/w_create_account"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create account"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/purple_500"
        android:transitionName="account_change"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/white"
        android:textAllCaps="false"
        android:paddingVertical="12dp"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/w_login_screen"
        app:strokeWidth="1dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/w_login_screen"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="40dp"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:transitionName="account_change"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/white"
        app:strokeWidth="1dp" />




</androidx.constraintlayout.widget.ConstraintLayout>